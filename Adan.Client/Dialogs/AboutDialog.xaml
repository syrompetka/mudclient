<Window x:Class="Adan.Client.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="About" Height="100" Width="140"
        ShowInTaskbar="false"
        xmlns:Utils="clr-namespace:Adan.Client.Common.Utils;assembly=Adan.Client.Common" Style="{StaticResource DefaultWindowStyle}">
    <Window.Resources>
        <Utils:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid>
        <Label VerticalAlignment="Center" Content="Version 1.6.2"  Margin="10,5,5,10"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" IsDefault="True" IsCancel="True" MinWidth="50" Click="HandleOk" Content="OK"/>
    </Grid>
</Window>
